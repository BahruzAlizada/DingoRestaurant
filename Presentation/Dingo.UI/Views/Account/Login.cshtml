@{
    Layout = "_Layout";
}
@model LoginVM


            <div class="card" style="margin-top:100px;">
                <div class="card-body">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="row">
                        <div class="col-md-5">

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <label asp-for="Password" class="form-label">Şifrə</label>
                        <input asp-for="Password" type="password" class="form-control" aria-describedby="password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsRemember" class="form-check-input" type="checkbox" id="remember-me" />
                            <label asp-for="IsRemember" class="form-check-label" for="remember-me"> Məni Xatırla </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" type="submit">Daxil Ol</button>
                    </div>
                </form>

                        </div>
                    </div>
                   
                </div>
            </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}